<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
    "-//Apache Software Foundation//DTD Struts Configuration 2.3//EN"
    "http://struts.apache.org/dtds/struts-2.3.dtd ">
<struts>
    <!-- 定义逻辑视图与物理视图之间的联系 -->
    <package name="trio" extends="struts-default">
    
     <!-- 返回登录界面  -->
        <action name="home" class="com.structs.trio.Jump" method="returnHome">
            <result name="SUCCESS">/index.html</result>
        </action>

	<!-- 登录  -->
        <action name="log" class="com.structs.trio.Login_in" method="login">
            <result name="SUCCESS">/showinfo.jsp</result>
			<result name="FALSE">/failure.jsp</result>
        </action>

	<!-- 注册  -->
        <action name="assign">
            <result>/assign.jsp</result>
        </action>

	<!-- 注册成功  -->
        <action name="assign_s" class="com.structs.trio.Assign_in" method="add_information">
            <result name="SUCCESS">/success.jsp</result>
        </action>	
        
	<!-- 查询  -->
        <action name="find">
            <result>/Find.jsp</result>
        </action>

	<!-- 查询成功  -->
        <action name="find_s" class="com.structs.trio.Operations" method="SearchInformation">
            <result name="SUCCESS">/showinfo.jsp</result>
        </action>

    <!-- 返回个人主页  -->
        <action name="showinfo" class="com.structs.trio.Jump" method="returninfo">
            <result name="SUCCESS">/showinfo.jsp</result>
        </action>

	<!-- 显示个人资料  -->
        <action name="information" class="com.structs.trio.Operations" method="infor">
            <result name="SUCCESS">/Echarts.html</result>
        </action>
    
    <!-- 增加老师  -->
        <action name="addts">
            <result>/addTeacher.jsp</result>
        </action> 
    
    <!-- 增加成功  -->
        <action name="addt" class="com.structs.trio.addTea" method="AddTeacher">
            <result name="SUCCESS">/showinfo.jsp</result>
        </action>	   
   
     

    </package>
</struts>


